  ArduinoCloud.printDebugInfo();
}

void loop() {
  ArduinoCloud.update();
  if (digitalRead(PINO_SENSOR) == LOW) {
    chovendo = true;
    fecharJanela();
  } else {
    chovendo = false;
  }
  dadosGrafico = analogRead(PINO_SENSOR);
}


