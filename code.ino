#include <Servo.h>
#define PINO_SERVO D5
#define PINO_SENSOR D7
Servo servo;

void setup() {
  pinMode(PINO_SENSOR, INPUT);
  servo.attach(PINO_SERVO);
  servo.write(0);
  Serial.begin(9600);

  // Defined in thingProperties.h
  initProperties();

  // Connect to Arduino IoT Cloud
  ArduinoCloud.begin(ArduinoIoTPreferredConnection);
  
